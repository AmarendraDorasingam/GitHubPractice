<aura:component >
    <aura:attribute name='item' type='Camping_Item__c' required='true' 
                    default="{Name:'Torch', Price__c: 10, Quantity__c: 1, 
                             Packed__c: false}"></aura:attribute>
    <aura:attribute name='disabled' type='Boolean'></aura:attribute>
        <p>Name  :{!v.item.Name}</p>
        <p>Price :
        <lightning:formattedNumber value="{!v.item.Price__c}" style="currency"/>
        </p>
        <p>Quantity :
        <lightning:formattedNumber value="{!v.item.Quantity__c}" style="currency"/>
        </p>
        <p> 
         <lightning:input type="toggle"                            
                          label="Packed"                           
                          name="Packed"                         
                          checked="{!v.item.Packed__c}" />
        </p>
    
        <lightning:button variant="brand" label="Packed!" onclick="{!c.packItem}" disabled='{!v.disabled}'/>
</aura:component>